<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <fragment
        android:id="@+id/infobar"
        android:name="com.itrifonov.weatherviewer.InfobarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_infobar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/forecast_list"
            android:name="com.itrifonov.weatherviewer.ForecastListFragment"
            android:layout_width="@dimen/activity_list_width"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_forecast_list" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorSeparationLine" />

        <fragment
            android:id="@+id/forecast_detail"
            android:name="com.itrifonov.weatherviewer.ForecastDetailFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_forecast_detail" />

    </LinearLayout>

</LinearLayout>