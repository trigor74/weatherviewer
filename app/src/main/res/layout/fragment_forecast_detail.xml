<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/forecast_detail_time"
                    style="@style/TextStyle.Large"
                    android:layout_gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/forecast_detail_day_of_week"
                    style="@style/TextStyle.Medium"
                    android:layout_gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/forecast_detail_date"
                    style="@style/TextStyle.Medium"
                    android:layout_gravity="center"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/forecast_detail_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@android:color/transparent" />

                <TextView
                    android:id="@+id/forecast_detail_temp"
                    style="@style/TextStyle.Large"
                    android:text="" />

            </LinearLayout>

            <TextView
                android:id="@+id/forecast_detail_description"
                style="@style/TextStyle.Large"
                android:paddingTop="5dp"
                android:text="@string/txt_no_data" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/forecast_detail_temp_min"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/forecast_detail_temp_max"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/forecast_detail_pressure"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/forecast_detail_humidity"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/forecast_detail_wind_speed"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/forecast_detail_wind_deg"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/forecast_detail_clouds"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/forecast_detail_rain"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

        <TextView
            android:id="@+id/forecast_detail_snow"
            style="@style/TextStyle.Large"
            android:paddingTop="5dp"
            android:text="" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>