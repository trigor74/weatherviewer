<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_text_api_key" />

            <EditText
                android:id="@+id/edit_text_api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_view_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:text="@string/settings_text_city_name" />

            <EditText
                android:id="@+id/edit_text_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_delete_old_data"
                style="@style/SettingsTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:text="@string/settings_switch_delete_old_data"
                app:showText="false" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_start_update_service"
                style="@style/SettingsTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:text="@string/settings_switch_start_weather_update_service"
                app:showText="false" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>