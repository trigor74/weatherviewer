<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InfobarTextStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="InfobarTextStyle.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>

</resources>